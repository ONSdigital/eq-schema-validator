{
  "$schema": "http://json-schema.org/draft-04/schema",
  "block": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/id"
      },
      "title": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "number": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": ["Confirmation"]
      },
      "questions": {
        "type": "array",
        "minItems": 1,
        "items": {
          "oneOf": [
            {
              "$ref": "../questions/content.json#/question"
            }
          ]
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type"
    ]
  }
}
