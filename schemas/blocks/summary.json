{
  "$id": "https://eq.ons.gov.uk/blocks/summary.json",
  "$schema": "http://json-schema.org/draft-07/schema",
  "block": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/idx"
      },
      "type": {
        "type": "string",
        "enum": [
          "Summary",
          "SectionSummary"
        ]
      },
      "collapsible": {
        "description": "When True, the summary page will contain a list of collapsible section summaries",
        "type": "boolean"
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type"
    ]
  }
}
