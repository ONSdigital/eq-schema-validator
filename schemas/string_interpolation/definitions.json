{
  "$schema": "http://json-schema.org/draft-04/schema",
  "string_values": {
    "type": "object",
    "properties": {
      "placeholder": {
        "type": "string"
      },
      "value": {
        "$ref": "#/value_source"
      },
      "transforms": {
        "type": "array",
        "items": {
          "type": "object",
          "anyOf": [
            {
              "$ref": "transforms/format_number.json#/format_number"
            },
            {
              "$ref": "transforms/format_date_range.json#/format_date_range"
            }
          ]
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "placeholder"
    ],
    "oneOf": [
      {
        "required": [ "value" ]
      },
      {
        "required": [ "transforms" ]
      }
    ]
  },
  "value_source": {
    "type": "object",
    "properties": {
      "source": {
        "type": "string",
        "enum": [
          "answers",
          "metadata",
          "collection_metadata"
        ]
      },
      "identifier": {
        "type": "string"
      }
    }
  }
}

