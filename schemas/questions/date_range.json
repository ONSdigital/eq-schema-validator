{
  "$schema": "http://json-schema.org/draft-04/schema",
  "question": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/id"
      },
      "title": {
        "type": "string"
      },
      "number": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "guidance": {
        "type": "object",
        "properties": {
          "content": {
            "$ref": "../common_definitions.json#/content"
          }
        }
      },
      "skip_conditions": {
        "$ref": "../common_definitions.json#/skip_conditions"
      },
      "type": {
        "type": "string",
        "enum": ["DateRange"]
      },
      "answers": {
        "type": "array",
        "minItems": 2,
        "maxItems": 2,
        "items": {
          "$ref": "../answers/date.json#/answer"
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "title",
      "type",
      "answers"
    ]
  }
}