{
  "$id": "https://eq.ons.gov.uk/answers/checkbox.json",
  "$schema": "http://json-schema.org/draft-06/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/idx"
      },
      "q_code": {
        "$ref": "../common_definitions.json#/q_code"
      },
      "label": {
        "type": "string"
      },
      "guidance": {
        "$ref": "https://eq.ons.gov.uk/answers/definitions.json#/answer_guidance"
      },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "type": {
        "type": "string",
        "enum": [
          "Checkbox"
        ]
      },
      "options": {
        "allOf": [{
            "$ref": "definitions.json#/options"
          },
          {
            "minItems": 1
          }
        ]
      },
      "mandatory": {
        "type": "boolean"
      },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_CHECKBOX": {
              "type": "string"
            }
          }
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type",
      "mandatory",
      "options"
    ]
  }
}
