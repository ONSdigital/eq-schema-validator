{
  "$schema": "http://json-schema.org/draft-04/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/id"
      },
      "q_code": {
        "$ref": "../common_definitions.json#/q_code"
      },
      "label": {
        "type": "string"
      },
      "guidance": {
        "$ref": "../common_definitions.json#/guidance"
      },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "type": {
        "type": "string",
        "enum": [
          "Currency"
        ]
      },
      "mandatory": {
        "type": "boolean"
      },
      "max_length": {
        "type": "integer"
      },
      "decimal_places": {
        "type": "integer",
        "description": "Number of decimal places allowed"
      },
      "default": {
        "type": "integer",
        "description": "Default value on POST if none given"
      },
      "max_value": {
        "$ref": "definitions.json#/max_value"
      },
      "min_value": {
        "$ref": "definitions.json#/min_value"
      },
      "currency": {
        "$ref": "../lists/currencies.json#/currency"
      },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_NUMBER": {
              "type": "string"
            },
            "NUMBER_TOO_SMALL": {
              "type": "string"
            },
            "NUMBER_TOO_LARGE": {
              "type": "string"
            },
            "NUMBER_TOO_SMALL_EXCLUSIVE": {
              "type": "string"
            },
            "NUMBER_TOO_LARGE_EXCLUSIVE": {
              "type": "string"
            },
            "INVALID_NUMBER": {
              "type": "string"
            },
            "INVALID_INTEGER": {
              "type": "string"
            },
            "INVALID_DECIMAL": {
              "type": "string"
            }
          }
        }
      },
      "calculated": {
        "$ref": "definitions.json#/calculated"
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type",
      "mandatory",
      "currency",
      "label"
    ]
  }
}