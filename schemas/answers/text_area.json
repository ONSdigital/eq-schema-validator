{
  "$id": "https://eq.ons.gov.uk/answers/text_area.json",
  "$schema": "http://json-schema.org/draft-06/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/idx"
      },
      "q_code": {
        "$ref": "../common_definitions.json#/q_code"
      },
      "label": {
        "type": "string"
      },
      "guidance": {
        "$ref": "https://eq.ons.gov.uk/answers/definitions.json#/answer_guidance"
      },
      "description": {
        "$ref": "../string_interpolation/definitions.json#/string_with_placeholders"
      },
      "type": {
        "type": "string",
        "enum": [
          "TextArea"
        ]
      },
      "mandatory": {
        "type": "boolean"
      },
      "max_length": {
        "type": "integer"
      },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_TEXTAREA": {
              "type": "string"
            },
            "MAX_LENGTH_EXCEEDED": {
              "type": "string"
            }
          }
        }
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type",
      "mandatory"
    ]
  }
}
