{
  "$schema": "http://json-schema.org/draft-04/schema",
  "answer": {
    "type": "object",
    "properties": {
      "id": {
        "$ref": "../common_definitions.json#/id"
      },
      "parent_answer_id": {
        "type": "string",
        "description": "The id of an answer which is the parent of this child answer, for example a radio option leading to a text field answer."
      },
      "q_code": {
        "$ref": "../common_definitions.json#/q_code"
      },
      "label": {
        "type": "string"
      },
      "guidance": {
        "$ref": "../common_definitions.json#/guidance"
      },
      "description": {
        "type": "string"
      },
      "type": {
        "type": "string",
        "enum": [
          "TextField"
        ]
      },
      "mandatory": {
        "type": "boolean"
      },
      "validation": {
        "type": "object",
        "properties": {
          "messages": {
            "MANDATORY_TEXTFIELD": {
              "type": "string"
            }
          }
        }
      },
      "calculated": {
        "$ref": "definitions.json#/calculated"
      }
    },
    "additionalProperties": false,
    "required": [
      "id",
      "type",
      "mandatory"
    ]
  }
}