{
    "env": {
        "browser": true,
        "es6": true
    },
    "plugins": [
        "security"
    ],
    "extends": [
        "standard",
        "plugin:security/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "no-console": [2],
        "no-unused-vars" : [1],
        "semi" : [2, "never"],
        "space-before-function-paren": [2, "never"],
        "no-alert": 0,
        "quotes": [2, "single"],
        "strict": [2, "never"],
        "new-cap": [0],
        "consistent-return": 0,
        "no-underscore-dangle": 0,
        "indent": [2, 2, {"SwitchCase": 1}],
        "space-before-blocks": [2, "always"],
        "no-var": [1]
    }
}